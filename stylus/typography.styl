/* Typography Presets */

h1
h2
h3
h4
    text-rendering optimizelegibility
    font-family 'Roboto Slab', serif
    letter-spacing 1px

.huge
h1
    font-size 2em
    line-height 1.25em
    font-weight 200

    @media tablet-small
        font-size 2.5em
        line-height 1.125em

    @media tablet-large
        font-size 3em
        line-height 1.05em

    @media only print
        font-size 36pt
        line-height 1.25em

.large
h2
    font-size 1.625em
    line-height 1.15384615em
    font-weight 200

    @media tablet-small
        font-size 2em
        line-height 1.25em

    @media tablet-large
        font-size 2.25em

    @media only print
        font-size 24pt
        line-height 1.25em

.bigger
h3
    font-size 1.375em
    line-height 1.15384615em
    font-weight 500

    @media tablet-small
        font-size 1.5em
        line-height 1.25em

    @media tablet-large
        font-size 1.75em

    @media only print
        font-size 18pt
        line-height 1.25em

.big
h4
    font-size 1.125em
    line-height 1.375em
    font-weight 500

    @media monitor-small
        font-size 1.25em
        line-height 1.25em

    @media only print
        font-size 14pt
        line-height 1.25em

body
    font 18px/28px 'Raleway', 'Helvetica Neue', Helvetica, Arial, sans-serif
    color grey-dark
    font-weight 400
    font-size 100% // changing this changes all of the font sizes
    line-height 1.25em

    // font scale
    @media tablet-small
        line-height 1.375em

    @media monitor-small
        font-size 1.125em
        line-height 1.4em

    @media only print
        font-size 12pt
        line-height 1.25em

.small
small
    font-size 0.8em
    line-height 1.25em

/* links */

a
    text-decoration none
    cursor pointer
    outline none
    color link-color
    transition color 200ms ease-out

    &:visited
        color link-color
    +hover()
        color link-hover
        transition color 200ms
    +active()
        color link-active
        transition color 200ms
    +focus()
        color link-active
        transition color 200ms