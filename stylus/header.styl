/* Header Bar */

.page-header
	position absolute
	background-color rgba(255,255,255,0.97)
	color grey-dark
	width 100%
	margin 0
	top 0
	left 0
	box-shadow 0 4px 10px -6px rgba(0,0,0,0.4)
	z-index 99
	display flex
	align-items center

	@media monitor-medium
		max-width maxwidth
		left 50%
		margin-left -40%

	@media monitor-large
		margin-left -600px
		width maxwidth

	.no-touchevents &.sticky
		position fixed

	.page-header-left
		flex 1
		clearfix()

		a
			float left

	.page-header-center
		padding 10px
		margin 0
		font-size 2.25rem
		line-height 2.25rem

	.page-header-right
		flex 1

		a
			float right

	.page-header-link
		a
			padding 10px
			display block
			color grey-dark
			text-transform uppercase
			font-size 14px
			line-height 22px

			@media tablet-small
				line-height 21px

			.angle
				font-size 22px
				vertical-align text-bottom
				display inline-block
				@media tablet-small
					font-size 30px

	.page-header-icon
		padding 10px 0
		clearfix()

		a
			padding-right 5px
			font-size 40px
			color grey-dark

			@media tablet-small
				padding 10px

			.iconic
				width 40px
				height 40px
				fill grey-darkest

	@media tablet-large
		width 80%
		margin 0 10%
		top 10px