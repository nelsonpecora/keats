/* This file contains LESS mixins and functions compiled from various sources */

// new clearfix (adapted from http://nicolasgallagher.com/micro-clearfix-hack/)
.clearfix() {
    &:before,
    &:after {
        content: " ";
        display: table;
    }
    &:after {
        clear: both;
    }
}

/* .border-radius(VALUE,VALUE,VALUE,VALUE); */

.border-radius(@topleft: 0, @topright: 0, @bottomright: 0, @bottomleft: 0) {
    border-top-right-radius: @topright;
    border-bottom-right-radius: @bottomright;
    border-bottom-left-radius: @bottomleft;
    border-top-left-radius: @topleft;
    background-clip: padding-box;
}

/* circle */
.circle(@diameter) {
    border-radius: 50%;
    width: @diameter;
    height: @diameter;
}

// truncate text with ellipses (requires containing element to be display: block or inline-block)
.text-truncate() {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.wrapper() {
    width: 95%;
    max-width: @txtwidth;
    margin: 0 auto;

    @media @tablet_small    { width: 85%; }
    @media @tablet_large    { width: 80%; }
    @media @monitor_small   { width: 65%; }
    @media @monitor_medium  { width: 70%; }
    @media @monitor_large   { width: 60%; }
}

